rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /leads/{leadId} {
      allow create: if true;
      allow read, update, delete: if request.auth != null && request.auth.token.sales == true;
    }
    match /leadQueue/{doc} {
      allow read, write: if request.auth != null && request.auth.token.sales == true;
    }
    match /users/{userId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null && (request.auth.uid == userId || request.auth.token.admin == true);
    }
    match /orders/{orderId} {
      allow create: if request.auth != null;
      allow read: if request.auth != null;
    }
    match /metrics/{doc} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.admin == true;
    }
    match /inventory/{doc} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.admin == true;
    }
    match /{document=**} {
      allow read: if true; allow write: if true;
    }
  }
}
